//Um usuário pode ter vários progressos
model Progress {
  id Int @id @default(autoincrement())
  userId Int
  user User @relation(fields: [userId], references: [id])
  collectionId Int 
  collection Collection @relation(fields: [collectionId], references: [id])
  
  dateUpdate DateTime @default(now())
  dateCreated DateTime @default(now())
  
  progressCards ProgressCard[] 
  dateToRevision DateTime
  
  //question_percents Int @default(0)
  //card_percents Int @default(0)|
}

model ProgressCard {
  id Int @id @default(autoincrement())
  progressId Int
  progress Progress @relation(fields: [progressId], references: [id])

  cardId Int
  card Card @relation(fields: [cardId], references: [id])

  category CardStatus
  
  dateCreated DateTime @default(now())
}

// Folder dados
model Folder {
  id Int @id @default(autoincrement())
  userId Int
  user User @relation(fields: [userId], references: [id])
  collection Collection[]
  
  dateUpdate DateTime @default(now())
  dateCreated DateTime @default(now())
  
  nameFolders String
}

model Achievements {
  id Int @id @default(autoincrement())
  userId Int
  user User @relation(fields: [userId], references: [id])

  dateUpdate DateTime @default(now())
  dateCreated DateTime @default(now())

  achievementName String @unique
  achievementCategory String @unique
}